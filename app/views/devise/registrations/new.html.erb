<h1 class="display-4">Create an Account</h1>
<%= render "devise/shared/error_messages", resource: resource %>
<%= form_for(resource, html: {class: "form-signin"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div>
  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, class: "form-control", placeholder: "Email address", autofocus: true, autocomplete: "email" %>

  <%= f.label :password, class: "sr-only" %>

  <% password_string =""
  if @minimum_password_length 
    password_string = " (#{@minimum_password_length} characters minimum)"
  end
   %>
  <%= f.password_field :password, class: "form-control", placeholder: "Password#{password_string}", autocomplete: "new-password" %>

  <%= f.label :password_confirmation, class: "sr-only" %>
  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Re-enter Password", autocomplete: "new-password" %>
</div>

<%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>